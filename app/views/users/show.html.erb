<section id="body-content" class="container">
    <div class="row mt-4">
        <div class="col-lg-2">
            <%= image_tag("default.jpg", alt: "Default", style: "width: 70%;") %>
        </div>
        <div class="col-lg-10 border border-dark d-flex align-items-center">
            <div class="user-lists w-100">
                <h2 class="text-dark"><%= @user.name %></h2>
                <p class="d-flex justify-content-end">Number Of posts <%= @user.posts_counter %></p>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-lg-12 border border-dark">
            <h4>Bio</h4>
            <p class="mt-2"><%= @user.bio %></p>
        </div>
    </div>

    <% @posts.each_with_index do |post, index| %>  
        <div class="row mt-4">
            <div class="col-lg-12 border border-dark">
                <h4 class="pt-2">Post #<%= index + 1 %></h4>
                <p class="mt-2"><%= post.text %></p>
                <p class="d-flex justify-content-end">Comments <%= post.comments_counter %>, Likes <%= post.Likes_counter%></p>
            </div>
        </div>
    <% end %>

    <div class="row mt-4 justify-content-center">
        <div class="col-lg-12 text-center">
            <%= link_to "View All Posts", user_posts_path(@user), class: "btn btn-primary" %>
        </div>
    </div>
</section>