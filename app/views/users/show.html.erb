<section id="body-content" class="container">
    <%= render partial: 'shared/user', locals: { user: @user } %>
    <div class="row mt-4">
        <div class="col-lg-12 border border-dark">
            <h4>Bio</h4>
            <p class="mt-2"><%= @user.bio %></p>
        </div>
    </div>

    <% @posts.each do |post| %>  
        <div class="row mt-4">
            <div class="col-lg-12 border border-dark">
                <h4 class="pt-2"><%= post.title %></h4>
                <p class="mt-2"><%= post.text %></p>
                <p class="d-flex justify-content-end">Comments <%= post.comments_counter %>, Likes <%= post.Likes_counter%></p>
            </div>
        </div>
    <% end %>

    <div class="row mt-4 justify-content-center">
        <div class="col-lg-12 text-center">
            <%= link_to "View All Posts", user_posts_path(@user), class: "btn btn-primary" %>
        </div>
    </div>
</section>